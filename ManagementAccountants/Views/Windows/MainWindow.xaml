<Window x:Class="ManagementAccountants.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:ManagementAccountants"
        DataContext="{Binding MainWindowModel, Source={StaticResource Locator}}"
        Title="{Binding Title}" 
        mc:Ignorable="d"
        Height="450" Width="800">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding ShowCustomersViewCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <DockPanel>
        <Menu IsMainMenu="True">
            <MenuItem Header="Клієнти" Command="{Binding ShowCustomersViewCommand}"/>
            <MenuItem Header="Бухгалтери" Command="{Binding ShowAccountantsViewCommand}"/>
            <MenuItem Header="Звіти" Command="{Binding ShowReportsViewCommand}"/>
        </Menu>
        <StatusBar>
            <StatusBarItem></StatusBarItem>
        </StatusBar>
        <Grid>
            <ContentControl Content="{Binding CurrentModel}"/>
        </Grid>
    </DockPanel>
</Window>
