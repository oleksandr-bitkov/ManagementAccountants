<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:Test4.ViewModels"
                    xmlns:view="clr-namespace:Test4.Views">
    
    <!--==============:Шаблон представлення для бухгалтерів:==============-->
    <DataTemplate DataType="{x:Type vm:AccountantsViewModel}">
        <view:AccountantView DataContext="{Binding }"/>
    </DataTemplate>
    <!--====================:Кінець шаблону:====================-->

    <!--==============:Шаблон представлення для клієнтів:==============-->
    <DataTemplate DataType="{x:Type vm:CustomersViewModel}">
        <view:CustomersView DataContext="{Binding}"/>
    </DataTemplate>
    <!--====================:Кінець шаблону:====================-->

    <!--==============:Шаблон представлення для звітів:==============-->
    <DataTemplate DataType="{x:Type vm:ReportsViewModel}">
        <view:ReportsView DataContext="{Binding}"/>
    </DataTemplate>
    <!--====================:Кінець шаблону:====================-->

</ResourceDictionary>